<div class="align-center">
  {{#each artist}}
    <div class="container">
      <div class="box">
        <img src="{{this.images.0.url}}" alt="{{this.name}}" />
        <div class="container-button">
          <h2>{{this.name}}</h2>
          <button class="button">
          <a href="/albums/{{this.id}}">View Albums</a>
          </button>
        </div>
      </div>
    </div>
  {{/each}}
</div>